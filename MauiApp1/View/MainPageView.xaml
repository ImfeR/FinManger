<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:UI.ViewModel"
             x:Class="UI.View.MainPageView"
             x:DataType="viewModels:MainPageViewModel"
             Title="Главная страница">

    <ScrollView>
        <VerticalStackLayout Padding="10, 15" Spacing="15">

            <Button
                Text="Добавить операцию"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                Command="{Binding GoToAddOperationPage}"
               />

            <Button
                Text="Добавить категорию"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                Command="{Binding GoToAddCategoryPage}"
                />

            <Button
                Text="Посмотреть статистику за месяц"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                Command="{Binding GoToShowStatisticPage}"
                />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
